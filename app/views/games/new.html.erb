<div class="container pt-5">
  <h1>New game</h1>

  <%=@letters%>
  <form action="/score" method="post" data-turbo="false">
        <div class="row">
          <div class="col-11">
            <label for="words">What is the longest word you can find?</label>
            <div class="input-group">
              <input type="text" class="form-control" id="input" name="respuesta" placeholder="Your word">
              <button class="btn btn-outline-secondary" type="submit">Play</button>
              <input id="letters" name="letters" type="hidden" value="@letters" />
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <%= hidden_field_tag :letters, @letters %>
            </div>
          </div>
        </div>
  </form>
</div>
